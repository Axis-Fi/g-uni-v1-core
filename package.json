{
  "name": "hardhat-project",
  "scripts": {
    "build": "npx tsc && yarn compile",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat deploy ",
    "format": "prettier --write '*/**/*.{js,sol,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.{js,sol,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@uniswap/v3-core": "^1.0.0-rc.0",
    "@uniswap/v3-periphery": "^1.0.0-beta.11",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.6",
    "hardhat-deploy": "^0.7.5",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,sol,json,md,ts,yaml,yml}": "yarn format",
    "*.{ts,js}": "eslint -c .eslintrc.json"
  }
}
